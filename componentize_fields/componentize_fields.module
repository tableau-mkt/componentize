/**
 * Implements hook_field_formatter_settings_summary_alter().
 *
 * Display field mapping settings to admins.
 */
function componentize_fields_field_formatter_settings_summary_alter(&$summary, $context) {
  // We know about this type of field.
  if (in_array($context['field']['type'], array_keys(componentize_fields_types()))) {
    $settings = _componentize_fields_get_field_display_settings($context);
    // A component has been set for the view mode.
    if (isset($settings['view_mode']->component) && !empty($settings['view_mode']->component)) {

      $variable_name = $settings['display']['componentize_fields_variable_name'];
      if (!empty($summary)) {
        $summary .= '<br />';
      }

      if ($variable_name) {
        $summary .= t('Map to "@variable" template variable', array(
          '@variable' => $variable_name,
        ));
        $summary .= '<br />';

        if ($settings['display']['componentize_fields_via_template']) {
          $summary .= t('Using field handler for template values');
        }
        else {
          $summary .= t('Rendered prior to template');
        }
      }
      else {
        $summary .= t('No template variable mapped yet!');
      }

    }
  }
}


