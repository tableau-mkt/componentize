/**
 * Build field settings summary shared function.
 *
 * @param string &$summary
 * @param array $field_settings
 */
function _componentize_fields_generate_summary(&$summary, $field_settings) {
  if (!empty($summary)) {
    $summary .= '<br />';
  }

  // Display settings.
  if (isset($field_settings['componentize_fields_variable_name']) && !empty($field_settings['componentize_fields_variable_name'])) {
    $variable_name = $field_settings['componentize_fields_variable_name'];
    $via_handler = $field_settings['componentize_fields_via_handler'];

    $summary .= t('Map to "@variable" template variable', array(
      '@variable' => $variable_name,
    ));
    $summary .= '<br />';

    if ($via_handler) {
      $summary .= t('Using field handler for template values');
    }
    else {
      $summary .= t('Rendered prior to template');
    }
  }
  else {
    $summary .= t('No template variable mapped yet!');
  }
}


/**
 * Implements hook_field_formatter_settings_summary_alter().
 *
 * Display field mapping settings to admins.
 */
function componentize_fields_field_formatter_settings_summary_alter(&$summary, $context) {
  $field_display_mode = $context['instance']['display'][$context['view_mode']];
  $hidden = ($field_display_mode['type'] === 'hidden');

  // We know about this type of field.
  if (!$hidden && in_array($context['field']['type'], array_keys(componentize_fields_types()))) {

    $view_mode_settings = _componentize_fields_get_view_mode_display_settings(
      $context['instance']['entity_type'], $context['instance']['bundle'], $context['view_mode']
    );

    // A component has been set for the view mode.
    if (isset($view_mode_settings->component) && !empty($view_mode_settings->component)) {
      _componentize_fields_generate_summary($summary, $field_display_mode['settings']);
    }
  }
}


