    ),
  );
}


/**
 * List available field types for variables.
 *
 * @return array
 */
function components_fieldgroup_field_types() {
  $handlers = &drupal_static(__FUNCTION__);
  if (!$handlers) {
    $handlers = module_invoke_all('components_fieldgroup_field_types_info');
    drupal_alter('components_fieldgroup_field_types_info', $handlers);
  }
  return $handlers;
}


